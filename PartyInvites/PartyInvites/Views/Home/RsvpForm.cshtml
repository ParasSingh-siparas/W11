@model GuestResponse
@*Strongly typed view*@

@{
    Layout = null;
}

<html>
<head>
    <title>RSVP Form</title>
</head>
<body>
    <div>RSVP Form</div>
    <form asp-action="RsvpForm" method="post">
        <div asp-validation-summary="All"></div>
        <p>
            <label asp-for="Name">Your Name: </label>
            <input asp-for="Name" />
        </p>
        <p>
            <label asp-for="Email">Your Email: </label>
            <input asp-for="Email" />
        </p>
        <p>
            <label asp-for="Phone">Your Phone Number: </label>
            <input asp-for="Phone" />
        </p>
        <p>
            <label asp-for="Attend">Will you attend the Party?</label>
            <select asp-for="Attend">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </p>
        <p>
            <label asp-for="FoodRestrict">Do you you have any Food Restrictions: </label>
            <input asp-for="FoodRestrict" />
        </p>
        <button type="reset">Reset</button>&nbsp;<button type="submit">Submit RSVP</button>
    </form>
</body>
</html>